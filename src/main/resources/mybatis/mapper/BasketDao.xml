<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- SQL 끝에 ; 세미콜론을 넣지 마세요! -->

<mapper namespace="com.study.springboot.dao.IBasketDao">

	<!-- 마이페이지 - 장바구니 보기 (PYH) -->
	<select id="viewBasket" resultType="com.study.springboot.dto.BasketDto">
		select * from 
		GENIES_BASKET  , GENIES_PRODUCT 
		where GENIES_BASKET.basket_product_idx = GENIES_PRODUCT.product_idx
        and GENIES_BASKET.basket_member_id = #{Param1} 
    </select>
    
    
    <select resultType="com.study.springboot.dto.BasketDto" id="user_cart_list"> 
    	SELECT * FROM GENIES_BASKET WHERE basket_member_id = #{member_id} </select>


	<delete id="delete_user_cart">DELETE FROM GENIES_BASKET WHERE basket_member_id = #{member_id} </delete>


	<delete id="cart_delete_action">delete from GENIES_BASKET where basket_product_idx in #{param1} and basket_member_id=#{param2} </delete>

	<insert id="cart_insert_action"> insert into GENIES_BASKET(basket_idx,basket_member_id,basket_product_idx,basket_count)VALUES ( genies_basket_seq.nextval, #{param1},#{param2},#{param3} ) </insert>

  	<select resultType="int" id="cart_count">SELECT count(*) from GENIES_BASKET WHERE basket_product_idx = #{param1} AND basket_member_id = #{param2} </select>

	<!-- 장바구니 비우기 (PYH) -->
	<delete id="basket_delete">
	delete from GENIES_BASKET where basket_member_id=#{param1}
	</delete>
	
</mapper>    


